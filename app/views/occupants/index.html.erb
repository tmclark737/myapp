<h1>Listing occupants</h1>
<%= link_to 'New Occupant', new_occupant_path %>

 
<table>
  <tr>
    <th>Name</th>
  </tr>
 
  <% @occupants.each do |occupant| %>
    <tr>
      <td><%= occupant.name %></td>

  <td><%= link_to 'Show', occupant_path(occupant) %></td>
  <td><%= link_to 'Edit', edit_occupant_path(occupant) %></td>
  <td><%= link_to 'Destroy', occupant_path(occupant),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>


</table>